// Top-level build file where you can add configuration options common to all sub-projects/modules.
ext {
    android = [
            compileSdkVersion: 26,
            buildToolsVersion: '26.0.2',
            minSdkVersion    : 16,
            targetSdkVersion : 26,
            javaVersion      : JavaVersion.VERSION_1_8,
            versionCode      : 1,
            versionName      : '1.0',
    ]
    depsVersion = [
            kotlinVersion            : '1.2.10',
            butterknifeVersion       : '8.8.1',
            appcompatVersion         : '26.1.0',
            qmuiVersion              : '1.0.8',
            junitVersion             : '4.12',
            loggingInterceptorVersion: '3.1.2',
            okhttpVserion            : '3.4.2',
            gsonVersion              : '2.8.2',
            volleyVersion            : '2.0.1',
            gradientuiVersion        : '1.0.1',
            retrofitVersion          : '2.3.0',
            rxAndroidVersion         : '2.0.1',
            rxJavaVersion            : '2.1.1',
            disklruCacheVersion      : '2.0.2',
            easypermissionsVersion   : '1.1.3',
            pdfViewVersion           : '2.8.2',
            swipeMenuListViewVersion : '1.3.0',
            rxPermissionsVersion     : '0.9.5@aar',
            greendaoVersion          : '3.2.0',
            constraintVersion        : '1.0.2',
