<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="4dp">

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#DCDCDC"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B7FFFB"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sample_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="1dp"
                android:layout_weight="4"
                android:textSize="16sp"
                android:visibility="visible"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="修改"
                android:textSize="@dimen/text_size_8"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:text="删除"
                android:textSize="@dimen/text_size_8"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>

            <TableRow>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#B7FFFB"
                    android:gravity="center"
                    android:text="样品编号"
                    android:textSize="@dimen/text_size_8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>

                <TextView
                    android:id="@+id/sample_sno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>
                <!--********************************************************-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#B7FFFB"
                    android:gravity="center"
                    android:text="样品类型"
                    android:textSize="@dimen/text_size_8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>

                <TextView
                    android:id="@+id/sample_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>
                <!--********************************************************-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#B7FFFB"
                    android:gravity="center"
                    android:text="样品型号"
                    android:textSize="@dimen/text_size_8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>

                <TextView
                    android:id="@+id/sample_model"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>

            <TableRow>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#B7FFFB"
                    android:gravity="center"
                    android:text="检测单位"
                    android:textSize="@dimen/text_size_8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>

                <TextView
                    android:id="@+id/test_unit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>
                <!--********************************************************-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#B7FFFB"
                    android:gravity="center"
                    android:text="生产日期"
                    android:textSize="@dimen/text_size_8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>

                <TextView
                    android:id="@+id/production_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>
                <!--********************************************************-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#B7FFFB"
                    android:gravity="center"
                    android:text="检测日期"
                    android:textSize="@dimen/text_size_8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>

                <TextView
                    android:id="@+id/test_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_8"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC"/>

            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC"/>
        </TableLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>