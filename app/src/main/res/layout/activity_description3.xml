<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view3"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewStyle1"
                android:text="2.1.11 超声波探伤仪操作人员经过专门机构培训考核合格，取得《无损探测人员技术资格证》方可上岗，并定期年审"
                android:id="@+id/textView4"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F5F5F5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/textView4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#fff">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Text"
                        android:text="个人信息"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            style="@style/Text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="个人得分："/>

                        <TextView
                            android:id="@+id/p_score2_1_11"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp">

                        <TextView
                            style="@style/Text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="姓名：" />

                        <EditText
                            android:id="@+id/et_name2_1_11"
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            style="@style/Text"
                            android:text="身份证："/>

                        <EditText
                            android:id="@+id/et_card2_1_11"
                            android:layout_width="match_parent"
                            style="@style/EditTextStyle"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            style="@style/Text"
                            android:text="手机号码："/>

                        <EditText
                            android:id="@+id/et_phone2_1_11"
                            android:layout_width="match_parent"
                            style="@style/EditTextStyle"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            style="@style/Text"
                            android:text="入职时间："/>

                        <EditText
                            android:id="@+id/et_time2_1_11"
                            android:layout_width="match_parent"
                            style="@style/EditTextStyle"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            style="@style/Text"
                            android:text="备注："/>

                        <EditText
                            android:id="@+id/et_remark2_1_11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/EditTextStyle1"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#F5F5F5"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.8"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="#fff">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb1_yes2_1_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Text"
                            android:text="检查"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/rb1_no2_1_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Text"
                            android:text="不检查"/>
                    </RadioGroup>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <RadioButton
                            android:id="@+id/rb2_yes2_1_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Text"
                            android:text="满足"/>

                        <RadioButton
                            android:id="@+id/rb2_no2_1_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Text"
                            android:text="不满足"
                            android:checked="true"/>
                    </RadioGroup>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb3_yes2_1_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Text"
                            android:text="在岗"/>

                        <RadioButton
                            android:id="@+id/rb3_no2_1_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Text"
                            android:text="不在岗"
                            android:checked="true"/>
                    </RadioGroup>


                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb4_yes2_1_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Text"
                            android:text="在册"/>

                        <RadioButton
                            android:id="@+id/rb4_no2_1_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Text"
                            android:text="不在册"
                            android:checked="true"/>
                    </RadioGroup>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <RadioButton
                            android:id="@+id/rb5_yes2_1_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Text"
                            android:text="有社保"/>

                        <RadioButton
                            android:id="@+id/rb5_no2_1_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Text"
                            android:text="无社保"
                            android:checked="true"/>
                    </RadioGroup>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb6_yes2_1_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Text"
                            android:text="有劳动合同"/>

                        <RadioButton
                            android:id="@+id/rb6_no2_1_11"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/Text"
                            android:text="无劳动合同"
                            android:checked="true"/>
                    </RadioGroup>

                    <CheckBox
                        android:id="@+id/cb1_2_1_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Text"
                        android:text="技术员兼任"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tv_rule2_1_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        style="@style/Text"
                        android:background="@drawable/style_edittext"
                        android:text="缺任命书或不在岗 扣一半分值;专业不符或缺社保 不得分。"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#F5F5F5"
        android:layout_above="@+id/linearLayout6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view3"/>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fff">

        <include
            android:id="@+id/description3_bottom"
            layout="@layout/include_bottom2"/>
    </LinearLayout>

</RelativeLayout>