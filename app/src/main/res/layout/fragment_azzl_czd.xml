                    android:text="铰页轴线垂直度 : "
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/ed_2_1"
                    style="@style/EdStyle"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/tv_title_2_1"
