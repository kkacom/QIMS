<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#6495ED"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/icon_left_white" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="添加委托单"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

      <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#fff"
            android:orientation="vertical">
            <!-- 委托单编号、项目代码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="委托单编号" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <EditText
                    android:id="@+id/et_item_code"
                    android:background="@drawable/edit_bg_white"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:minHeight="30dp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="项目代码" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />
                <EditText
                    android:id="@+id/et_project_code"
                    android:background="@drawable/edit_bg_white"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:minHeight="30dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 委托单位-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="委托单位" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_from_unit"
                        android:background="@drawable/edit_bg_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 项目名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="项目名称" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_item_name"
                        android:background="@drawable/edit_bg_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 样品地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="样品地址" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_sample_addr"
                        android:background="@drawable/edit_bg_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 样品来源、样品区域-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="样品来源" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <Spinner
                    android:id="@+id/sp_sample_from"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="样品区域" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <Spinner
                    android:id="@+id/sp_sample_area"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 收样日期、委托形式-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="收样日期" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />


                <TextView
                    android:id="@+id/tv_accept_date"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:hint="请选择日期"
                    android:background="@drawable/text_readonly"
                    android:gravity="center"
                    android:minHeight="30dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="委托形式" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <Spinner
                    android:id="@+id/sp_wtxs"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 见证单位-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="见证单位" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_witness_unit"
                        android:background="@drawable/edit_bg_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 联系电话、见证人姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="联系电话" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <EditText
                    android:id="@+id/et_contact"
                    android:background="@drawable/edit_bg_white"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:minHeight="30dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="见证人姓名" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <EditText
                    android:id="@+id/et_witness"
                    android:background="@drawable/edit_bg_white"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:minHeight="30dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 见证人电话、委托人姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="见证人电话" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <EditText
                    android:id="@+id/et_witness_phone"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_bg_white"
                    android:clickable="false"
                    android:minHeight="30dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="委托人姓名" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <EditText
                    android:id="@+id/et_client"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_bg_white"
                    android:clickable="false"
                    android:minHeight="30dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 委托人电话、收 样 人-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="委托人电话" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <EditText
                    android:id="@+id/et_client_phone"
                    android:background="@drawable/edit_bg_white"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:clickable="false"

                    android:minHeight="30dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="收 样 人" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <EditText
                    android:id="@+id/et_receive"
                    android:background="@drawable/edit_bg_white"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:minHeight="30dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 监督单位-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="监督单位" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_supervisory_unit"
                        android:background="@drawable/edit_bg_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 委托类别、监督员姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="委托类别" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <Spinner
                    android:id="@+id/sp_wtlb"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="监督员姓名" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <EditText
                    android:id="@+id/et_supervisory"
                    android:background="@drawable/edit_bg_white"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:minHeight="30dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 监督编号、保密要求-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="监督编号" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <EditText
                    android:id="@+id/et_supervisory_no"
                    android:background="@drawable/edit_bg_white"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:clickable="false"

                    android:minHeight="30dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="保密要求" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <Spinner
                    android:id="@+id/sp_secret"
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 备 注-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/col_width"
                    android:layout_height="match_parent"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="备 注" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/et_remarks"
                        android:background="@drawable/edit_bg_white"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:singleLine="true" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="3dp"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/bt_undo"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="9dp"
            android:background="@drawable/button_red"
            android:drawableLeft="@mipmap/huitui"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="撤销"
            android:textColor="#ff0000"
            android:textSize="12sp"
            android:visibility="visible" />
        <Button
            android:id="@+id/bt_save"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:background="@drawable/button_style2"
            android:drawableLeft="@mipmap/button3"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="保存"
            android:textColor="#6495ED"
            android:textSize="12sp"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>