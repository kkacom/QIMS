<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="60dp"

    android:background="#fff">

    <RelativeLayout
        android:id="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:maxLength="24"
            android:text="南海狮山"
            android:textColor="#000"
            android:textSize="@dimen/text_size_16" />

        <!--<ImageView-->
            <!--android:id="@+id/iv_status"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="58dp"-->
            <!--android:background="@drawable/has_upload" />-->

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dp"
            android:text="已上传"
            android:textColor="@color/app_color_blue" />
        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/tv_status"
            android:layout_marginRight="5dp"
            android:background="@drawable/has_upload" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/ly1"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_site"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="生产厂区"
            android:textColor="#6D6B6B"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:gravity="center_vertical"
            android:text="2016-08-15"
            android:textColor="#6D6B6B"
            android:textSize="@dimen/text_size_16" />
    </RelativeLayout>

    <!--<ImageView-->
        <!--android:id="@+id/iv_select"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:background="@drawable/has_toggle" />-->
    <ImageView
        android:id="@+id/iv_print"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/no_toggle"/>
</RelativeLayout>