<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#6495ED"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_left_white" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="请休假详情"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="399dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text=" 申 请 人 " />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />


                <TextView
                    android:id="@+id/uname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="所在科室" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:id="@+id/dname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 类型、婚否-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="请休假类型" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <Spinner
                    android:id="@+id/type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:background="@null"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="婚姻状态" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:id="@+id/married"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 申请时间、请假说明-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="申请时间" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />


                <TextView
                    android:id="@+id/approvedate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"

                    android:gravity="center"
                    android:minHeight="30dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="请假说明" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:id="@+id/history"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_text_bg"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:singleLine="true"
                    android:text="本年度已请假明细"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 开始时间、结束时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="开始日期" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />


                <TextView
                    android:id="@+id/begindate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center"
                    android:hint="请选择日期"
                    android:minHeight="30dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <Spinner
                    android:id="@+id/sp_bm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:entries="@array/apply_dayt_type"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp"></Spinner>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 开始时间、结束时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="结束日期" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />


                <TextView
                    android:id="@+id/enddate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:gravity="center"
                    android:hint="请选择日期"
                    android:minHeight="30dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <Spinner
                    android:id="@+id/sp_em"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:entries="@array/apply_dayt_type"
                    android:gravity="center"
                    android:minHeight="0dp"
                    android:minWidth="0dp"></Spinner>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 请休假天数-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="请假天数" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />


                <TextView
                    android:id="@+id/dayt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_edit_bg"
                    android:gravity="center"
                    android:hint="请填写天数"
                    android:minHeight="30dp"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 年假情况-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="年假情况" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/njqk"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 年假情况-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="其他休假" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/qtxj"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 请休假事由-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="请休假事由" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3"
                    android:minHeight="30dp">

                    <TextView
                        android:id="@+id/reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:inputType="textMultiLine"
                        android:minHeight="40dp" />


                    <Button
                        android:id="@+id/bt_reason"
                        android:layout_width="85dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/reason"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_style2"
                        android:drawableLeft="@drawable/button2"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:text="填写事由"
                        android:textColor="#6495ED"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 审核意见-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="审核意见" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/opinion1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:inputType="textMultiLine"
                        android:minHeight="40dp" />


                    <Button
                        android:id="@+id/bt_opinion1"
                        android:layout_width="85dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/opinion1"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_style2"
                        android:drawableLeft="@drawable/button2"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:text="填写意见"
                        android:textColor="#6495ED"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!--审批意见-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="审批意见" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/opinion2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minHeight="40dp" />

                    <Button
                        android:id="@+id/bt_opinion2"
                        android:layout_width="85dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/opinion2"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_style2"
                        android:drawableLeft="@drawable/button2"
                        android:paddingBottom="2dp"
                        android:paddingLeft="10dp"
                        android:text="填写意见"
                        android:textColor="#6495ED"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
            <!-- 销假时间、实际天数 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="销假时间" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />


                <TextView
                    android:id="@+id/backdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F1F9FF"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="实际天数" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#DCDCDC" />

                <TextView
                    android:id="@+id/days"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minHeight="30dp"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DCDCDC" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/record"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_style1"
            android:drawableLeft="@drawable/button1"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="记录"
            android:textColor="#696969"
            android:visibility="gone"
            android:textSize="12sp" />


        <Button
            android:id="@+id/bt_submit"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/record"
            android:layout_toRightOf="@+id/record"
            android:background="@drawable/button_style2"
            android:drawableLeft="@drawable/point_right"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="提交"
            android:textColor="#6495ED"
            android:textSize="12sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bt_undo"
            android:layout_width="65dp"
            android:layout_height="25dp"

            android:layout_alignLeft="@+id/bt_return"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/bt_return"
            android:background="@drawable/button_red"
            android:drawableLeft="@drawable/huitui"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="撤销"
            android:textColor="#ff0000"
            android:textSize="12sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bt_return"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_red"
            android:drawableLeft="@drawable/huitui"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="回退"
            android:textColor="#ff0000"
            android:textSize="12sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bt_save"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@+id/bt_submit"
            android:layout_toRightOf="@+id/bt_submit"
            android:background="@drawable/button_style2"
            android:drawableLeft="@drawable/button3"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:text="保存"
            android:textColor="#6495ED"
            android:textSize="12sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <EditText
        android:id="@+id/nothing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <EditText
        android:id="@+id/userdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</LinearLayout>