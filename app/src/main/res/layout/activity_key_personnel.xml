<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout5"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewStyle1"
                android:text="1.4 关键人员"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#F5F5F5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyle2"
                        android:text="@string/key_personnel.4.1"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_yes1_4_1"
                            style="@style/TextStyle"
                            android:text="Y"/>

                        <RadioButton
                            android:id="@+id/rb_no1_4_1"
                            style="@style/TextStyle"
                            android:text="N"
                            android:checked="true"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/TextStyle1"
                                android:text="姓名"/>

                            <TextView
                                style="@style/TextStyle1"
                                android:layout_weight="0.5"
                                android:text="等级"/>

                            <TextView
                                style="@style/TextStyle1"
                                android:text="专业"/>

                            <TextView
                                style="@style/Text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="社保"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/name1"
                                style="@style/EditTextStyle"
                                android:layout_width="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:layout_margin="2dp"
                                android:background="@drawable/style_edittext">

                                <Spinner
                                    android:id="@+id/level1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:entries="@array/key_personnel1"/>
                            </LinearLayout>

                            <EditText
                                android:id="@+id/professional1"
                                style="@style/EditTextStyle"
                                android:layout_width="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical">

                                <CheckBox
                                    android:id="@+id/condition1"
                                    style="@style/TextStyle"
                                    android:layout_margin="2dp"
                                    android:layout_gravity="center"
                                    android:text="有"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/name2"
                                style="@style/EditTextStyle"
                                android:layout_width="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:layout_margin="2dp"
                                android:background="@drawable/style_edittext">

                                <Spinner
                                    android:id="@+id/level2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:entries="@array/key_personnel1"/>
                            </LinearLayout>

                            <EditText
                                android:id="@+id/professional2"
                                style="@style/EditTextStyle"
                                android:layout_width="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical">

                                <CheckBox
                                    android:id="@+id/condition2"
                                    style="@style/TextStyle"
                                    android:layout_margin="2dp"
                                    android:layout_gravity="center"
                                    android:text="有"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/name3"
                                style="@style/EditTextStyle"
                                android:layout_width="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:layout_margin="2dp"
                                android:background="@drawable/style_edittext">

                                <Spinner
                                    android:id="@+id/level3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:entries="@array/key_personnel1"/>
                            </LinearLayout>

                            <EditText
                                android:id="@+id/professional3"
                                style="@style/EditTextStyle"
                                android:layout_width="0dp"
                                android:layout_margin="2dp"
                                android:layout_weight="1"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical">

                                <CheckBox
                                    android:id="@+id/condition3"
                                    style="@style/TextStyle"
                                    android:layout_margin="2dp"
                                    android:layout_gravity="center"
                                    android:text="有"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 这个TextView是为了撑开布局 -->
                        <TextView
                            style="@style/Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/style_edittext"
                            android:layout_margin="2dp">

                            <Spinner
                                android:id="@+id/spinner1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:entries="@array/key_personnel2"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/style_edittext"
                            android:layout_margin="2dp">

                            <Spinner
                                android:id="@+id/spinner2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:entries="@array/key_personnel2"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/style_edittext"
                            android:layout_margin="2dp">

                            <Spinner
                                android:id="@+id/spinner3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:entries="@array/key_personnel2"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#F5F5F5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextViewStyle2"
                        android:text="@string/key_personnel.4.2"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_yes1_4_2"
                            style="@style/TextStyle"
                            android:text="Y"/>

                        <RadioButton
                            android:id="@+id/rb_no1_4_2"
                            style="@style/TextStyle"
                            android:text="N"
                            android:checked="true"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextStyle"
                        android:text="姓名："/>

                    <EditText
                        android:id="@+id/et_name1_4_2"
                        style="@style/EditTextStyle"
                        android:layout_width="150dp"
                        android:layout_marginRight="20dp"/>

                    <TextView
                        style="@style/TextStyle"
                        android:text="专业："/>

                    <EditText
                        android:id="@+id/et_specialty1_4_2"
                        style="@style/EditTextStyle"
                        android:layout_width="150dp"
                        android:layout_marginRight="20dp"/>

                    <TextView
                        style="@style/TextStyle"
                        android:text="社保："/>

                    <CheckBox
                        android:id="@+id/cb_condition1_4_2"
                        style="@style/TextStyle"
                        android:text="有"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/key_personnel_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#F5F5F5"/>

    <LinearLayout
        android:id="@+id/key_personnel_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#fff">

        <include
            layout="@layout/include_bottom2"/>
    </LinearLayout>

</RelativeLayout>